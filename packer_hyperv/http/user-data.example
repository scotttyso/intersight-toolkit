#cloud-config
autoinstall:
    version: 1
    early-commands:
        # workaround to stop ssh for packer as it thinks it timed out
        - sudo systemctl stop ssh
    locale: en_US
    keyboard:
        layout: en
        variant: us
    packages: [ansible, git, open-vm-tools, openssh-server, ntp, net-tools, curl, vim, ifupdown, zip, unzip, python3-pip, cloud-init]
    network:
        network:
            version: 2
            ethernets:
                ens192:
                    dhcp4: true
    identity:
        hostname: ubuntu
        username: ubuntu
        password: "$6$rounds=4096$ntlX/dlo6b$HXaLN4RcLIGaEDdQdR2VTYi9pslSeXWL131MqaakqE285Nv0kW9KRontQYivCbycZerUMcjVsuLl2V8bbdadI1"
    ssh:
        install-server: yes
        allow-pw: yes
        authorized-keys:
            - ssh-rsa  ubuntu@ubuntu.local
    storage:
        layout:
            name: direct
    user-data:
        disable_root: false
    late-commands:
        - echo 'toolkit ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/toolkit
        - curtin in-target --target=/target -- chmod 440 /etc/sudoers.d/toolkit